{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true, 
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "express"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
